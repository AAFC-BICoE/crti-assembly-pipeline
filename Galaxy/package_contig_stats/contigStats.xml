<tool id="contigStats" name="contigStats" version="1.0.0">
  <description>Output the median and minimum contig lengths</description>
  	<requirements>
  		<requirement type="package" version="5.18.1">perl</requirement>
  		<requirement type="package" version="1.6.922">bioperl</requirement>
  	</requirements>
	<command interpreter='perl'> 
		contigStats.pl -c $contigs_file > $output;
        </command>
	<inputs>
		<param name="contigs_file" type="data" format="fasta"/>
	</inputs>
	<outputs>
		<data name="output" format="txt"/>
	</outputs>

	<readme>
		
		Requires BioPerl
		
	</readme>

	<help>
		Enter the contigs fasta file generated by velvet. It then generates the median and minimum contigs length.
	</help>

</tool>
