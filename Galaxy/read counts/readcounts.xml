<tool id="read_counts" name="Read_counts" version="1.0.0">
	<description>Tool to count reads in a Fastq file</description>
	<options sanitize="False" />
	<command>
		grep -c ^$read $file > $out;
	</command>
	<inputs>
		<param name="file" type="data" format="fastq" label="Fastq"/>
		<param name="read" type="text" label="Reads Prefix"/>
	</inputs>
	<outputs>
		<data format="txt" name="out"> </data>
	</outputs>
</tool>
